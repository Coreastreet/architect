<div class="title py-6 text-center text-4xl bg-slate-200">
  <div class="py-6"><%= @theory_chunk.title %></div>
</div>
<div class="py-6 bg-[#F7FCFC]">
  <% @theory_points.each do |theory_point| %>
      <div class="flex flex-col md:flex-row">
          <div class="mx-10 p-6 flex flex-col items-center flex-1">
            <div class="pt-6">
                <% if theory_point.image.representable? %>
                    <%= image_tag theory_point.image.representation(resize_to_limit: [300, 300]), class: "flex-1" %>
                <% end %>
            </div>
          </div>
          <div class="mx-10 px-6 pb-6 flex flex-col items-center flex-1">
            <div class="text-2xl text-center pt-4">
                <%= theory_point.title %>
            </div>
            <div class="pt-6 text-xl">
                <%= theory_point.description %>
            </div>
          </div>
      </div>
  <% end %>
</div>
<div class="flex justify-center w-full">
    <div class="text-3xl py-10">Exercises:</div>
</div>
<% @exercises.each do |exercise| %>
    <div class="bg-[#F7FCFC] flex flex-col md:flex-row py-6">
      <div class="mx-10 px-6 pb-6 flex flex-col items-center flex-1">
        <div class="text-2xl text-center pt-4">
            <%= exercise.title %>
        </div>
        <div class="pt-6 text-xl">
            <%= exercise.description %>
        </div>
      </div>
      <div data-controller="accordion" class="mx-10 px-6 pb-6 flex flex-col items-center flex-1">
        <button class="accordion text-2xl">Solution:</button>
        <div class="panel pt-6 text-xl">
            <p class="py-6 capitalize"><%= exercise.solution %></p>
        </div>
      </div>
    </div>
<% end %>
<div class="flex justify-between bg-zinc-100 items-center px-6 py-3">
  <% if (@page_index == 1) %>
      <%= link_to "< Prev", problem_path(@lesson),
       class:"flex-0 btn btn-blue border-black bg-slate-grey text-2xl font-light rounded-xl" %>
  <% else %>
      <%= link_to "< Prev", theory_path(@lesson, (@page_index-1)),
      class:"flex-0 btn btn-blue border-black bg-slate-grey text-2xl font-light rounded-xl" %>
  <% end %>
  <% if (@page_index >= @theory_points.count) %>
      <%= link_to "Next >", summary_path(@lesson),
      class:"flex-0 btn btn-blue border-black bg-slate-grey text-2xl font-light rounded-xl" %>
  <% else %>
    <%= link_to "Next >", theory_path(@lesson, (@page_index+1)),
        class:"flex-0 btn btn-blue border-black bg-slate-grey text-2xl font-light rounded-xl" %>
  <% end %>
</div>